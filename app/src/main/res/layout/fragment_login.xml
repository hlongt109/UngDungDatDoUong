<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:scrollbars="vertical"
    tools:context=".fragment.login_register.LoginFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse_10051" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/vector_142" />


        <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="118dp"
            android:fontFamily="@font/sen_bold"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/sen"
            android:gravity="center"
            android:text="Vui lòng đăng nhập vào tài khoản của bạn"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="233dp"
            android:background="@drawable/white_card"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:id="@+id/txt_login_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/sen"
                    android:text="Tên đăng nhập"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_below="@id/txt_login_username"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit"
                    android:fontFamily="@font/sen"
                    android:inputType="textEmailAddress"
                    android:hint="example"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/txt_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_login_username"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sen"
                    android:text="Mật khẩu"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_login_password"
                    android:id="@+id/input"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:layout_marginTop="10dp"
                    app:passwordToggleDrawable="@drawable/ic_visibility">
                    <EditText
                        android:inputType="textPassword"
                        android:hint="Mật khẩu . . ."
                        android:id="@+id/edt_login_password"
                        android:drawablePadding="6dp"
                        android:paddingHorizontal="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/sen"
                        tools:ignore="RtlSymmetry"
                        android:textColorHint="@color/cardview_dark_background" />
                </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/input"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtforgotPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen"
                        android:text="Quên mật khẩu" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="327dp"
                    android:layout_height="62dp"
                    android:layout_below="@id/layout1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_edit"
                    android:fontFamily="@font/sen"
                    android:text="Đăng nhập"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_login"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen"
                        android:text="Bạn chưa có tài khoản? " />

                    <TextView
                        android:id="@+id/txt_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen_bold"
                        android:text="Đăng ký"
                        android:textAllCaps="true" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.core.widget.NestedScrollView>